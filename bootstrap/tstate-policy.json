                "dynamodb:PutItem",
                "dynamodb:CreateTable",
                "dynamodb:ListTagsOfResource"
            ],
            "Resource": "arn:aws:dynamodb:*:*:table/fabiooliveira-website-tfstate-lock"
        },
        {
            "Sid": "VisualEditor2",
            "Effect": "Allow",
            "Action": "ec2:DescribeAccountAttributes",
            "Resource": "*"
        }
